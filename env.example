# CommerceBox - Variables de Entorno
# Copiar a .env y configurar valores reales

# Django Configuration
COMMERCEBOX_SECRET_KEY=django-insecure-change-this-in-production
COMMERCEBOX_DEBUG=True
COMMERCEBOX_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
COMMERCEBOX_DB_NAME=commercebox
COMMERCEBOX_DB_USER=commercebox_user
COMMERCEBOX_DB_PASSWORD=
COMMERCEBOX_DB_HOST=localhost
COMMERCEBOX_DB_PORT=5432

# Redis Configuration
COMMERCEBOX_REDIS_URL=redis://localhost:6379/0

# CommerceBox Features
COMMERCEBOX_BACKUP_ENABLED=True
COMMERCEBOX_ALERTAS_ENABLED=True
COMMERCEBOX_FE_ENABLED=False

# Email Configuration (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# Facturación Electrónica (específico por país)
FE_API_URL=
FE_API_KEY=
FE_CERT_PATH=
FE_CERT_PASSWORD=

# Monitoreo (opcional)
SENTRY_DSN=

# AWS S3 (opcional para archivos estáticos en producción)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
